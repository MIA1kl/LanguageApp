<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.multiscreenapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="German words"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MultiscreenApp">
        <activity android:name=".PhrasesActivity"
            android:parentActivityName=".MainActivity"
            android:label="Phrases">
        </activity>

        <activity android:name=".ColorsActivity"
            android:parentActivityName=".MainActivity"
            android:label="Colors">
        </activity>

        <activity android:name=".FamilyActivity"
            android:parentActivityName=".MainActivity"
            android:label="Family">
        </activity>

        <activity
            android:name=".NumberActivity"
            android:parentActivityName=".MainActivity"
            android:label="Numbers">
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>